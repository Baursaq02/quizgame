<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите режим игры"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primary_text" />

    <Button
        android:id="@+id/guessByFlagButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:text="Угадать страну по флагу"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/guessByCapitalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:text="Угадать страну по столице"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/viewResultsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:text="Просмотреть результаты"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="16dp" />
</LinearLayout>
